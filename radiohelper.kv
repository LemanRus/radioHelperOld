#: import App kivy.app.App
#: import FadeTransition kivy.uix.screenmanager.FadeTransition

<RadioHelperScreenManager>:
    transition: FadeTransition()
    MainScreen:
        id: one
    NominalsScreen:
        id: nominal
    ResistorScreen:
        id: resistor
    CapacitorScreen:
    ComponentsScreen:
        id: components
    PinsScreen:
    SchemesScreen:
    SymbolsScreen:
    StatesScreen:
    HelpScreen:
    AboutScreen:

<MainScreen>:
    name: "main"
    BoxLayout:
        orientation: "vertical"
        Label:
            id: title1
            text: "Здесь будет заголовок"
            font_size: app.config.getint("font", "Размер шрифта заголовков")
            size_hint_y: None
            height: 40
        BoxLayout:
            Button:
                id: nominals_button
                text: "Маркировка и номиналы компонентов"
                text_size: self.size
                halign: "center"
                valign: "center"
                font_size: app.config.getint("font", "Размер шрифта текста")
                on_release: root.manager.current = "nominal"
            Button:
                id: button2
                text: "Button 2"
                font_size: app.config.getint("font", "Размер шрифта текста")
                on_release: root.manager.current = "components"
        BoxLayout:
            Button:
                id: button3
                text: "Button 3"
                font_size: app.config.getint("font", "Размер шрифта текста")
                on_release: root.manager.current = "pins"
            Button:
                id: button4
                text: "Button 4"
                font_size: app.config.getint("font", "Размер шрифта текста")
                on_release: root.manager.current = "schemes"
        BoxLayout:
            Button:
                id: button5
                text: "Button 5"
                font_size: app.config.getint("font", "Размер шрифта текста")
                on_release: root.manager.current = "symbols"
            Button:
                text: "Button 6"
                id: button6
                font_size: app.config.getint("font", "Размер шрифта текста")
                on_release: root.manager.current = "states"
        BoxLayout:
            Button:
                id: button7
                text: "Button 7"
                font_size: app.config.getint("font", "Размер шрифта текста")
                on_release: root.manager.current = "help"
            Button:
                id: button8
                text: "Button 8"
                font_size: app.config.getint("font", "Размер шрифта текста")
                on_release: root.manager.current = "about"
        Button:
            id: button_set
            text: "Настройки"
            font_size: app.config.getint("font", "Размер шрифта текста")
            on_release: app.open_settings()

<NominalsScreen>:
    name: "nominal"
    BoxLayout:
        orientation: "vertical"
        Button:
            text: "Резисторы"
            font_size: app.config.getint("font", "Размер шрифта текста")
            on_release: root.manager.current = "resistor"
        Button:
            text: "Конденсаторы"
            font_size: app.config.getint("font", "Размер шрифта текста")
            on_release: root.manager.current = "capacitor"
        Button:
            text: "На главный\nЗдесь будут расчёты компонентов"
            font_size: app.config.getint("font", "Размер шрифта текста")
            on_release: root.manager.current = "main"

<ResistorScreen>:
    name: "resistor"
    BoxLayout:
        orientation: "vertical"
        Spinner:
            id: main_spinner
            text: '4'
            values: '4', '5'
            on_parent: root.build_resistor(self.text)
            on_text: root.build_resistor(self.text)
        BoxLayout:
            id: resistor_grid
            cols: 7
            spacing: 20
            Label:
                size_hint_x: 0.15
            BoxLayout:
                id: resistor_bands
            Label:
                size_hint_x: 0.15
        Spinner:
            text: "1"
            values: "1", "2", "3"

#TODO: обавить функционал кнопки, передать результат в надпись
        Button:
            text: "Рассчитать"
            font_size: app.config.getint("font", "Размер шрифта текста")
            on_release: root.calculate_resistor(main_spinner.text)
        Label:
            id: resistance
            text: "Здесь будет расчёт"
            font_size: app.config.getint("font", "Размер шрифта заголовков")
        Button:
            text: "Назад"
            font_size: app.config.getint("font", "Размер шрифта текста")
            on_release: root.manager.current = "nominal"
        Button:
            text: "На главный"
            font_size: app.config.getint("font", "Размер шрифта текста")
            on_release: root.manager.current = "main"

<CapacitorScreen>:
    name: "capacitor"
    BoxLayout:
        orientation: "vertical"
        Button:
            text: "Назад"
            font_size: app.config.getint("font", "Размер шрифта текста")
