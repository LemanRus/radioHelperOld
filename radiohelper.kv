#: import App kivy.app.App
#: import FadeTransition kivy.uix.screenmanager.FadeTransition

<RadioHelperScreenManager>:
    transition: FadeTransition()
    MainScreen:
        id: one
    NominalsScreen:
        id: nominal
    ResistorScreen:
        id: resistor
    CapacitorScreen:
    ComponentsScreen:
        id: components
    PinsScreen:
    SchemesScreen:
    SymbolsScreen:
    StatesScreen:
    HelpScreen:
    AboutScreen:

<MainScreen>:
    name: "main"
    BoxLayout:
        orientation: "vertical"
        Label:
            id: title1
            text: "Здесь будет заголовок"
            font_size: app.config.getint("font", "header_size")
            size_hint_y: None
            height: 40
        BoxLayout:
            Button:
                id: nominals_button
                text: "Маркировка и номиналы компонентов"
                text_size: self.size
                halign: "center"
                valign: "center"
                font_size: app.config.getint("font", "text_size")
                on_release: root.manager.current = "nominal"
            Button:
                id: button2
                text: "Button 2"
                font_size: app.config.getint("font", "text_size")
                on_release: root.manager.current = "components"
        BoxLayout:
            Button:
                id: button3
                text: "Button 3"
                font_size: app.config.getint("font", "text_size")
                on_release: root.manager.current = "pins"
            Button:
                id: button4
                text: "Button 4"
                font_size: app.config.getint("font", "text_size")
                on_release: root.manager.current = "schemes"
        BoxLayout:
            Button:
                id: button5
                text: "Button 5"
                font_size: app.config.getint("font", "text_size")
                on_release: root.manager.current = "symbols"
            Button:
                text: "Button 6"
                id: button6
                font_size: app.config.getint("font", "text_size")
                on_release: root.manager.current = "states"
        BoxLayout:
            Button:
                id: button7
                text: "Button 7"
                font_size: app.config.getint("font", "text_size")
                on_release: root.manager.current = "help"
            Button:
                id: button8
                text: "Button 8"
                font_size: app.config.getint("font", "text_size")
                on_release: root.manager.current = "about"
        Button:
            id: button_set
            text: "Настройки"
            font_size: app.config.getint("font", "text_size")
            on_release: app.open_settings()

<NominalsScreen>:
    name: "nominal"
    BoxLayout:
        orientation: "vertical"
        Button:
            text: "Резисторы"
            font_size: app.config.getint("font", "text_size")
            on_release: root.manager.current = "resistor"
        Button:
            text: "Конденсаторы"
            font_size: app.config.getint("font", "text_size")
            on_release: root.manager.current = "capacitor"
        Button:
            text: "На главный\nЗдесь будут расчёты компонентов"
            font_size: app.config.getint("font", "text_size")
            on_release: root.manager.current = "main"

<ResistorScreen>:
    name: "resistor"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            Label:
                text: "Для резисторов сквозного монтажа выберите количество полос:"
                text_size: self.size
                halign: "center"
                valign: "center"
                font_size: app.config.getint("font", "text_size")
                size_hint_x: 2
            Spinner:
                id: main_spinner
                text: '3'
                font_size: app.config.getint("font", "text_size")
                values: '3', '4', '5', '6'
                on_parent: root.build_resistor(self.text)
                on_text: root.build_resistor(self.text)
        BoxLayout:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "./img/resistor.png"
            id: resistor_grid
            size_hint_y: 1.5
            Label:
                size_hint_x: 0.25
            BoxLayout:
                id: resistor_bands
                size_hint_y: 0.8
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Label:
                size_hint_x: 0.25

        Button:
            text: "Рассчитать"
            font_size: app.config.getint("font", "text_size")
            on_release: root.calculate_resistor(main_spinner.text)
        Label:
            id: resistance
            text: "Здесь будет расчёт"
            font_size: app.config.getint("font", "header_size")
        Label:
            text: "Для SMD резистора впишите в поле ниже маркировку с резистора: "
            text_size: self.size
            halign: "center"
            valign: "center"
            font_size: app.config.getint("font", "header_size")
            size_hint_y: 2
        BoxLayout:
            TextInput:
                id: smd_input
                font_size: app.config.getint("font", "header_size")
                multiline: False
                halign: "center"
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                on_text_validate: root.calculate_smd_resistor(self.text)
            Button:
                text: "Рассчитать"
                size_hint_x: 0.2
                on_release: root.calculate_smd_resistor(smd_input.text)
        Label:
            id: smd_resistance
        Button:
            text: "Назад"
            font_size: app.config.getint("font", "text_size")
            on_release: root.manager.current = "nominal"
        Button:
            text: "На главный"
            font_size: app.config.getint("font", "text_size")
            on_release: root.manager.current = "main"

<CapacitorScreen>:
    name: "capacitor"
    BoxLayout:
        orientation: "vertical"
        Button:
            text: "Назад"
            font_size: app.config.getint("font", "text_size")
