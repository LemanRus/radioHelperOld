<SerialCapacitorCalculateScreen>:
    name: "ser_capacitor_cal"
    on_pre_enter: self.reset()
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            id: ser_cap_box
            orientation: "vertical"
            size_hint_y: 5
        BoxLayout:
            Button:
                text: "Добавить конденсатор"
                on_release: root.add_capacitor()
            Button:
                text: "Очистить"
                on_release: root.reset()
        Button:
            text: "Рассчитать!"
            on_release: root.ser_cap_calculate()
        Label:
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: 0.05
        BoxLayout:
            Label:
                text: "Результат:"
            Label:
                id: ser_cap_output
        BoxLayout:
            Button:
                text: "Назад"
                font_size: app.app_button_size
                on_release: root.manager.current = "components"
            Button:
                text: "На главный"
                font_size: app.app_button_size
                on_release: root.manager.current = "main"