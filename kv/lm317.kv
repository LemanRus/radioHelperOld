<LM317CalculateScreen>:
    name: "lm317_cal"
    BoxLayout:
        orientation: "vertical"
        Button:
            text: "Стабилизатор напряжения"
            font_size: app.app_button_size
            on_release: root.manager.current = "LM317_voltage"
        Button:
            text: "Стабилизатор тока"
            font_size: app.app_button_size
            on_release: root.manager.current = "LM317_current"
        BoxLayout:
            Button:
                text: "Назад"
                font_size: app.app_button_size
                on_release: root.manager.current = "components"
            Button:
                text: "На главный"
                font_size: app.app_button_size
                on_release: root.manager.current = "main"

<LM317Voltage>:
    name: "LM317_voltage"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            Label:
                text: "Выходное напряжение:"
            TextInput:
                id: lm317_vout_input
                size_hint_x: 0.1
            Label:
                size_hint_x: 0.1
                text: "В"
        BoxLayout:
            Label:
                text: "Сопротивление R1:"
            TextInput:
                id: lm317_r1_input
                size_hint_x: 0.1
            Label:
                size_hint_x: 0.1
                text: "Ом"
        BoxLayout:
            Label:
                text: "Ток нагрузки:"
            TextInput:
                id: lm317_iout_input
                size_hint_x: 0.1
            Label:
                size_hint_x: 0.1
                text: "А"
        BoxLayout:
            Label:
                text: "Входное напряжение:"
            TextInput:
                id: lm317_vin_input
                size_hint_x: 0.1
            Label:
                size_hint_x: 0.1
                text: "В"
        Button:
            text: "Рассчитать!"
            on_release: root.calculate_lm317_voltage(lm317_vout_input.text, lm317_r1_input.text, lm317_iout_input.text, lm317_vin_input.text)
        Label:
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: 0.05
        BoxLayout:
            Label:
                text: "Сопротивление R2:"
            Label:
                id: lm317_r2_output
                size_hint_x: 0.1
        BoxLayout:
            Label:
                text: "Стандартное сопротивление R2:"
            Label:
                id: lm317_r2_corrected_output
                size_hint_x: 0.1
        BoxLayout:
            Label:
                text: "Выходное напряжение:"
            Label:
                id: lm317_vout_output
                size_hint_x: 0.1
        BoxLayout:
            Label:
                text: "Рекомендуемый тип стабилизатора:"
            Label:
                id: lm317_recommend_output
                size_hint_x: 0.1
        BoxLayout:
            Label:
                text: "Рассеиваемая мощность:"
            Label:
                id: lm317_power_output
                size_hint_x: 0.1
        BoxLayout:
            Button:
                text: "Назад"
                font_size: app.app_button_size
                on_release: root.manager.current = "lm317_cal"
            Button:
                text: "На главный"
                font_size: app.app_button_size
                on_release: root.manager.current = "main"

<LM317Current>:
    name: "LM317_current"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            Label:
                text: "Выходной ток:"
            TextInput:
                id: lm317_iout_input_cur
                size_hint_x: 0.1
            Label:
                size_hint_x: 0.1
                text: "А"
        BoxLayout:
            Label:
                text: "Падение напряжения на нагрузке:"
            TextInput:
                id: lm317_vout_input_cur
                size_hint_x: 0.1
            Label:
                size_hint_x: 0.1
                text: "В"
        Button:
            text: "Рассчитать!"
            on_release: root.calculate_lm317_current(lm317_iout_input_cur.text, lm317_vout_input_cur.text)
        Label:
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: 0.05
        BoxLayout:
            Label:
                text: "Сопротивление R1:"
            Label:
                id: lm317_r1_output_cur
                size_hint_x: 0.1
        BoxLayout:
            Label:
                text: "Мощность:"
            Label:
                id: lm317_r1_power_output_cur
                size_hint_x: 0.1
        BoxLayout:
            Label:
                text: "Выходной ток:"
            Label:
                id: lm317_iout_output_cur
                size_hint_x: 0.1
        BoxLayout:
            Label:
                text: "Рекомендуемый тип стабилизатора:"
            Label:
                id: lm317_recommend_output_cur
                size_hint_x: 0.1
        BoxLayout:
            Label:
                text: "Входное напряжение, не менее:"
            Label:
                id: lm317_vin_output_cur
                size_hint_x: 0.1
        BoxLayout:
            Button:
                text: "Назад"
                font_size: app.app_button_size
                on_release: root.manager.current = "lm317_cal"
            Button:
                text: "На главный"
                font_size: app.app_button_size
                on_release: root.manager.current = "main"