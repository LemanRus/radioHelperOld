<LM317CalculateScreen>:
    name: "lm317_cal"
    BoxLayout:
        orientation: "vertical"
        Button:
            text: "Стабилизатор напряжения"
            font_size: app.app_button_size
            text_size: self.size
            halign: "center"
            valign: "center"
            on_release: root.manager.current = "LM317_voltage"
        Button:
            text: "Стабилизатор тока"
            font_size: app.app_button_size
            text_size: self.size
            halign: "center"
            valign: "center"
            on_release: root.manager.current = "LM317_current"
        BoxLayout:
            Button:
                text: "Назад"
                font_size: app.app_button_size
                text_size: self.size
                halign: "center"
                valign: "center"
                on_release: root.manager.current = "components"
            Button:
                text: "На главный"
                font_size: app.app_button_size
                text_size: self.size
                halign: "center"
                valign: "center"
                on_release: root.manager.current = "main"

<LM317Voltage>:
    name: "LM317_voltage"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            Label:
                text: "Выходное напряжение:"
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
            TextInput:
                id: lm317_vout_input
                size_hint_x: 0.1
                font_size: app.app_font_size
                multiline: False
                halign: "center"
                padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
                on_text_validate:
            Label:
                size_hint_x: 0.1
                text: "В"
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
        BoxLayout:
            Label:
                text: "Сопротивление R1:"
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
            TextInput:
                id: lm317_r1_input
                size_hint_x: 0.1
                font_size: app.app_font_size
                multiline: False
                halign: "center"
                padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
                on_text_validate:
            Label:
                size_hint_x: 0.1
                text: "Ом"
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
        BoxLayout:
            Label:
                text: "Ток нагрузки:"
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
            TextInput:
                id: lm317_iout_input
                size_hint_x: 0.1
                font_size: app.app_font_size
                multiline: False
                halign: "center"
                padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
                on_text_validate:
            Label:
                size_hint_x: 0.1
                text: "А"
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
        BoxLayout:
            Label:
                text: "Входное напряжение:"
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
            TextInput:
                id: lm317_vin_input
                size_hint_x: 0.1
                font_size: app.app_font_size
                multiline: False
                halign: "center"
                padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
                on_text_validate:
            Label:
                size_hint_x: 0.1
                text: "В"
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
        Button:
            text: "Рассчитать!"
            font_size: app.app_button_size
            text_size: self.size
            halign: "center"
            valign: "center"
            on_release: root.calculate_lm317_voltage(lm317_vout_input.text, lm317_r1_input.text, lm317_iout_input.text, lm317_vin_input.text)
        Label:
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: 0.05
        BoxLayout:
            Label:
                text: "Сопротивление R2:"
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
            Label:
                id: lm317_r2_output
                size_hint_x: 0.3
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
        BoxLayout:
            Label:
                text: "Стандартное сопротивление R2:"
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
            Label:
                id: lm317_r2_corrected_output
                size_hint_x: 0.3
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
        BoxLayout:
            Label:
                text: "Выходное напряжение:"
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
            Label:
                id: lm317_vout_output
                size_hint_x: 0.3
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
        BoxLayout:
            Label:
                text: "Рекомендуемый тип стабилизатора:"
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
            Label:
                id: lm317_recommend_output
                size_hint_x: 0.3
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
        BoxLayout:
            Label:
                text: "Рассеиваемая мощность:"
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
            Label:
                id: lm317_power_output
                size_hint_x: 0.3
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
        BoxLayout:
            Button:
                text: "Назад"
                font_size: app.app_button_size
                text_size: self.size
                halign: "center"
                valign: "center"
                on_release: root.manager.current = "lm317_cal"
            Button:
                text: "На главный"
                font_size: app.app_button_size
                text_size: self.size
                halign: "center"
                valign: "center"
                on_release: root.manager.current = "main"

