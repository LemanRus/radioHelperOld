<LM317CalculateScreen>:
    name: "lm317_cal"
    BoxLayout:
        orientation: "vertical"
        Button:
            text: "Стабилизатор напряжения"
            font_size: app.app_button_size
            on_release: root.manager.current = "LM317_voltage"
        Button:
            text: "Стабилизатор тока"
            font_size: app.app_button_size
            on_release: root.manager.current = "LM317_current"
        BoxLayout:
            Button:
                text: "Назад"
                font_size: app.app_button_size
                on_release: root.manager.current = "components"
            Button:
                text: "На главный"
                font_size: app.app_button_size
                on_release: root.manager.current = "main"

<LM317Voltage>:
    name: "LM317_voltage"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            Label:
                text: "Выходное напряжение:"
            TextInput:
                size_hint_x: 0.1
            Label:
                size_hint_x: 0.1
                text: "В"
        BoxLayout:
            Label:
                text: "Сопротивление R1:"
            TextInput:
                size_hint_x: 0.1
            Label:
                size_hint_x: 0.1
                text: "Ом"
        BoxLayout:
            Label:
                text: "Ток нагрузки:"
            TextInput:
                size_hint_x: 0.1
            Label:
                size_hint_x: 0.1
                text: "А"
        BoxLayout:
            Label:
                text: "Входное напряжение:"
            TextInput:
                size_hint_x: 0.1
            Label:
                size_hint_x: 0.1
                text: "В"
        Button:
            text: "Рассчитать!"
            on_release: root.calulate_lm317_voltage()
        Label:
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: 0.05
        BoxLayout:
            Label:
                text: "Сопротивление R2:"
            Label:
                size_hint_x: 0.1
        BoxLayout:
            Label:
                text: "Стандартное сопротивление R2:"
            Label:
                size_hint_x: 0.1
        BoxLayout:
            Label:
                text: "Выходное напряжение:"
            Label:
                size_hint_x: 0.1
        BoxLayout:
            Label:
                text: "Рекомендуемый тип стабилизатора:"
            Label:
                size_hint_x: 0.1
        BoxLayout:
            Label:
                text: "Рассеиваемая мощность:"
            Label:
                size_hint_x: 0.1
        BoxLayout:
            Button:
                text: "Назад"
                font_size: app.app_button_size
                on_release: root.manager.current = "lm317_cal"
            Button:
                text: "На главный"
                font_size: app.app_button_size
                on_release: root.manager.current = "main"
