<InductorCalculateScreen>:
    name: "inductor_cal"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Расчёт длины намотки и числа витков"
        BoxLayout:
            Label:
                text: "Индуктивность:"
            TextInput:
                size_hint_x: 0.1
            Label:
                size_hint_x: 0.1
                text: "мГн"
        BoxLayout:
            Label:
                text: "Диаметр каркаса:"
            TextInput:
                size_hint_x: 0.1
            Label:
                size_hint_x: 0.1
                text: "мм"
        BoxLayout:
            Label:
                text: "Диаметр провода (без изоляции):"
            TextInput:
                size_hint_x: 0.1
            Label:
                size_hint_x: 0.1
                text: "мм"
        BoxLayout:
            Label:
                text: "Диаметр провода (с изоляцией):"
            TextInput:
                size_hint_x: 0.1
            Label:
                size_hint_x: 0.1
                text: "мм"
        Label:
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: 0.05
        BoxLayout:
            size_hint_y: 2
            Label:
                text: "Число витков:"
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "Расчётное значение"
                Label:
                    text: "Целое значение"
        BoxLayout:
            size_hint_y: 2
            Label:
                text: "Длина намотки:"
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "Расчётное значение"
                Label:
                    text: "Целое значение"
        Label:
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: 0.05
        Label:
            text: "Расчёт индуктивности:"
        BoxLayout:
            Label:
                text: "Число витков:"
            Label:
                canvas.before:
                    Color:
                        rgba: 1,1,1,1
                    Rectangle:
                        size: self.size
                        pos: self.pos
                size_hint_x: 0.3
        BoxLayout:
            Label:
                text: "Диаметр каркаса:"
            Label:
                size_hint_x: 0.3
                canvas.before:
                    Color:
                        rgba: 1,1,1,1
                    Rectangle:
                        size: self.size
                        pos: self.pos
        BoxLayout:
            Label:
                text: "Длина намотки:"
            Label:
                canvas.before:
                    Color:
                        rgba: 1,1,1,1
                    Rectangle:
                        size: self.size
                        pos: self.pos
                size_hint_x: 0.3
        Label:
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: 0.05
        BoxLayout:
            Label:
                text: "Индуктивность:"
            Label:
                size_hint_x: 0.3
                canvas.before:
                    Color:
                        rgba: 1,1,1,1
                    Rectangle:
                        size: self.size
                        pos: self.pos
        BoxLayout:
            Button:
                text: "Назад"
                font_size: app.app_button_size
                on_release: root.manager.current = "components"
            Button:
                text: "На главный"
                font_size: app.app_button_size
                on_release: root.manager.current = "main"
