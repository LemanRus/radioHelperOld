<InductorCalculateScreen>:
    name: "inductor_cal"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Расчёт длины намотки и числа витков"
        BoxLayout:
            Label:
                text: "Индуктивность:"
            TextInput:
                id: henrys
                size_hint_x: 0.2
            Label:
                size_hint_x: 0.1
                text: "мкГн"
        BoxLayout:
            Label:
                text: "Диаметр каркаса:"
            TextInput:
                id: inductor_diameter
                size_hint_x: 0.2
            Label:
                size_hint_x: 0.1
                text: "мм"
        BoxLayout:
            Label:
                text: "Диаметр провода:"
            TextInput:
                id: inductor_oneturn
                size_hint_x: 0.2
            Label:
                size_hint_x: 0.1
                text: "мм"
        Button:
            text: "Рассчитать!"
            font_size: app.app_button_size
            on_release: root.inductor_calculate_turns(henrys.text, inductor_diameter.text, inductor_oneturn.text)
        Label:
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: 0.05
        BoxLayout:
            size_hint_y: 2
            Label:
                text: "Число витков:"
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "Расчётное значение"
                Label:
                    text: "Целое значение"
            BoxLayout:
                orientation: "vertical"
                Label:
                    id: inductor_turns
                Label:
                    id: inductor_turns_int
        BoxLayout:
            size_hint_y: 2
            Label:
                text: "Длина намотки:"
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "Расчётное значение"
                Label:
                    text: "Целое значение"
            BoxLayout:
                orientation: "vertical"
                Label:
                    id: inductor_length
                Label:
                    id: inductor_length_int
        Label:
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: 0.05
        Label:
            text: "Расчёт индуктивности:"
        BoxLayout:
            Label:
                text: "Число витков:"
            TextInput:
                id: inductor_turns_input
                size_hint_x: 0.2
            Label:
                text: 'шт'
                size_hint_x: 0.1
        BoxLayout:
            Label:
                text: "Диаметр каркаса:"
            TextInput:
                id: inductor_diameter_input
                size_hint_x: 0.2
            Label:
                text: 'мм'
                size_hint_x: 0.1
        BoxLayout:
            Label:
                text: "Длина намотки:"
            TextInput:
                id: inductor_length_input
                size_hint_x: 0.2
            Label:
                text: 'мм'
                size_hint_x: 0.1
        Button:
            text: "Рассчитать!"
            font_size: app.app_button_size
            on_release: root.inductor_calculate_henrys(inductor_turns_input.text, inductor_diameter_input.text, inductor_length_input.text)
        Label:
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: 0.05
        BoxLayout:
            Label:
                text: "Индуктивность:"
            Label:
                id: induction
        BoxLayout:
            Button:
                text: "Назад"
                font_size: app.app_button_size
                on_release: root.manager.current = "components"
            Button:
                text: "На главный"
                font_size: app.app_button_size
                on_release: root.manager.current = "main"
