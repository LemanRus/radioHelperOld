<ResistorLEDCalculateScreen>:
#TODO: добавить функционал расчёта
    name: "LED_cal"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            Label:
                text: "Напряжение источника питания:"
            TextInput:
                id: led_vol
                size_hint_x: 0.1
                text: '5'
            Label:
                size_hint_x: 0.1
                text: "В"
            Widget:
                size_hint_x: 0.48
        BoxLayout:
            size_hint_y: 2
            BoxLayout:
                orientation: "vertical"
                BoxLayout:
                    Label:
                        text: "Напряжение питания светодиода:"
                    TextInput:
                        id: led_vol_input
                        size_hint_x: 0.1
                    Label:
                        size_hint_x: 0.1
                        text: "В"
                BoxLayout:
                    Label:
                        text: "Ток светодиода:"
                    TextInput:
                        id: led_cur_input
                        size_hint_x: 0.1
                    Label:
                        size_hint_x: 0.1
                        text: "мА"
            Spinner:
                size_hint_x: 0.4
                text: "Выберите"
                font_size: app.app_button_size
                values: [*root.diodes]
                on_text: led_vol_input.text = str(root.diodes[self.text][0])
                on_text: led_cur_input.text = str(root.diodes[self.text][1])
        BoxLayout:
            Label:
                text: "Количество светодиодов:"
            TextInput:
                id: led_quantity
                size_hint_x: 0.1
                text: '1'
            Label:
                size_hint_x: 0.1
                text: "шт"
            Widget:
                size_hint_x: 0.48
        Button:
            text: "Рассчитать!"
            on_release: root.led_calculate(led_vol.text, led_vol_input.text, led_cur_input.text, led_quantity.text)
        Label:
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: 0.03
        Label:
            text: "Результат:"
        BoxLayout:
            Label:
                text: "Расчётное сопротивление:"
            Label:
                id: led_result
                size_hint_x: 0.3
                text_size: self.size
                halign: "center"
                valign: "center"
        BoxLayout:
            Label:
                text: "Стандартное значение:"
            Label:
                id: led_e24
                size_hint_x: 0.3
        BoxLayout:
            Label:
                text: "Рассеиваемая на резисторе мощность:"
            Label:
                id: led_res_power
                size_hint_x: 0.3
        BoxLayout:
            Label:
                text: "Потребляемый ток:"
            Label:
                id: led_cur
                size_hint_x: 0.3
        BoxLayout:
            Button:
                text: "Назад"
                font_size: app.app_button_size
                on_release: root.manager.current = "components"
            Button:
                text: "На главный"
                font_size: app.app_button_size
                on_release: root.manager.current = "main"