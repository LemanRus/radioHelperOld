<VoltageDividerCalculateScreen>:
    name: "divider_cal"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            Label:
                text: "Напряжение источника питания:"
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
            TextInput:
                id: v_in
                size_hint_x: 0.1
                font_size: app.app_font_size
                multiline: False
                halign: "center"
                padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
                on_text_validate:
            Label:
                size_hint_x: 0.1
                text: "В"
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
        BoxLayout:
            Label:
                text: "Сопротивление R1:"
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
            TextInput:
                id: r1
                size_hint_x: 0.1
                font_size: app.app_font_size
                multiline: False
                halign: "center"
                padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
                on_text_validate:
            Label:
                size_hint_x: 0.1
                text: "Ом"
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
        BoxLayout:
            Label:
                text: "Сопротивление R2:"
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
            TextInput:
                id: r2
                size_hint_x: 0.1
                font_size: app.app_font_size
                multiline: False
                halign: "center"
                padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
                on_text_validate:
            Label:
                size_hint_x: 0.1
                text: "Ом"
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
        Button:
            text: "Рассчитать!"
            font_size: app.app_button_size
            text_size: self.size
            halign: "center"
            valign: "center"
            on_release: root.divider_calculate_vout(v_in.text, r1.text, r2.text)
        Label:
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: 0.05
        Label:
            text: "Результат:"
            text_size: self.size
            font_size: app.app_font_size
            halign: "center"
            valign: "center"
        BoxLayout:
            Label:
                text: "Выходное напряжение:"
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
            Label:
                id: v_out
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
            Label:
                text: "В"
                size_hint_x: 0.1
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
        BoxLayout:
