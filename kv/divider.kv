<VoltageDividerCalculateScreen>:
    name: "divider_cal"
    BoxLayout:
        orientation: "vertical"
        Spinner:
            id: main_spinner
            size_hint_y: 0.1
            text: 'Расчёт выходного напряжения'
            font_size: app.app_button_size
            values: 'Расчёт выходного напряжения', 'Расчёт сопротивления'
            on_parent: root.build_divider(self.text)
            on_text: root.build_divider(self.text)
        BoxLayout:
            id: divider_box
            orientation: "vertical"
        BoxLayout:
            size_hint_y: 0.1
            Button:
                text: "Назад"
                font_size: app.app_button_size
                on_release: root.manager.current = "components"
            Button:
                text: "На главный"
                font_size: app.app_button_size
                on_release: root.manager.current = "main"
