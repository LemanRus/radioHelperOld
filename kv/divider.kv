<VoltageDividerCalculateScreen>:
    name: "divider_cal"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            Label:
                text: "Напряжение источника питания:"
            TextInput:
                size_hint_x: 0.1
            Label:
                size_hint_x: 0.1
                text: "В"
        BoxLayout:
            Label:
                text: "Сопротивление R1:"
            TextInput:
                size_hint_x: 0.1
            Label:
                size_hint_x: 0.1
                text: "Ом"
        BoxLayout:
            Label:
                text: "Сопротивление R2:"
            TextInput:
                size_hint_x: 0.1
            Label:
                size_hint_x: 0.1
                text: "Ом"
        Label:
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: 0.05
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                Widget:
                Label:
                    text: "Ом"
            BoxLayout:
                Label:
                    text: "В"
            BoxLayout:
                Widget:
                Label:
                    text: "Ом"
        BoxLayout:
            Label:
                text: "Напряжение источника питания:"
            TextInput:
                size_hint_x: 0.1
            Label:
                size_hint_x: 0.1
                text: "В"
        BoxLayout:
            Label:
                text: "Выходное напряжение:"
            TextInput:
                size_hint_x: 0.1
            Label:
                size_hint_x: 0.1
                text: "В"
        BoxLayout:
            Label:
                text: "Сопротивление R1:"
            TextInput:
                size_hint_x: 0.1
            Label:
                size_hint_x: 0.1
                text: "Ом"
        Label:
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: 0.05
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                Widget:
                Label:
                    text: "Ом"
            BoxLayout:
                Label:
                    text: "В"
            BoxLayout:
                Widget:
                Label:
                    text: "Ом"
        BoxLayout:
            Button:
                text: "Назад"
                font_size: app.app_button_size
                on_release: root.manager.current = "components"
            Button:
                text: "На главный"
                font_size: app.app_button_size
                on_release: root.manager.current = "main"