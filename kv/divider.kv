<VoltageDividerCalculateScreen>:
    name: "divider_cal"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            Label:
                text: "Напряжение источника питания:"
            TextInput:
                id: v_in
                size_hint_x: 0.1
            Label:
                size_hint_x: 0.1
                text: "В"
        BoxLayout:
            Label:
                text: "Сопротивление R1:"
            TextInput:
                id: r1
                size_hint_x: 0.1
            Label:
                size_hint_x: 0.1
                text: "Ом"
        BoxLayout:
            Label:
                text: "Сопротивление R2:"
            TextInput:
                id: r2
                size_hint_x: 0.1
            Label:
                size_hint_x: 0.1
                text: "Ом"
        Button:
            text: "Рассчитать!"
            on_release: root.divider_calculate_vout(v_in.text, r1.text, r2.text)
        Label:
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: 0.05
        Label:
            text: "Результат:"
        BoxLayout:
            Label:
                text: "Выходное напряжение:"
            Label:
                id: v_out
            Label:
                text: "В"
                size_hint_x: 0.1
        BoxLayout:
            Label:
                text: "Коэффициент делителя"
            Label:
                id: divider_rate
            Label:
                size_hint_x: 0.1
        Label:
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: 0.05
        BoxLayout:
            Label:
                text: "Напряжение источника питания:"
            TextInput:
                id: v_in_r
                size_hint_x: 0.1
            Label:
                size_hint_x: 0.1
                text: "В"
        BoxLayout:
            Label:
                text: "Выходное напряжение:"
            TextInput:
                id: v_out_r
                size_hint_x: 0.1
            Label:
                size_hint_x: 0.1
                text: "В"
        BoxLayout:
            Label:
                text: "Сопротивление R1:"
            TextInput:
                id: r1_input
                size_hint_x: 0.1
            Label:
                size_hint_x: 0.1
                text: "Ом"
        Button:
            text: "Рассчитать!"
            on_release: root.divider_calculate_r(v_in_r.text, v_out_r.text, r1_input.text)
        Label:
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: 0.05
        Label:
            text: "Результат:"
        BoxLayout:
            Label:
                text: "Сопротивление R2"
            Label:
                id: r2_calculated
        BoxLayout:
            Label:
                text: "Коэффициент делителя"
            Label:
                id: divider_rate_r
        BoxLayout:
            Label:
                text: "Резистор стандартного ряда"
            Label:
                id: r2_e24
        BoxLayout:
            Label:
                text: "Выходное напряжение с резистором из стандартного ряда"
                halign: "center"
                valign: "center"
                text_size: self.size
            Label:
                id: vout_e24
        BoxLayout:
            Button:
                text: "Назад"
                font_size: app.app_button_size
                on_release: root.manager.current = "components"
            Button:
                text: "На главный"
                font_size: app.app_button_size
                on_release: root.manager.current = "main"